#include <DHT11.h>

int led = A1;
const int gas = 0;
int gas_dados = A0;
int buzzer = A2;

const int LM35 = A3; //define o pino que lera a saida do LM35
int temperatura; // variavel que armazenara a temperatura medida

DHT11 dht11(A3);

void setup() {
  Serial.begin(9600);
  pinMode(buzzer , OUTPUT); // buzzer (pino 8) definido como saída
}

void loop() {
  
  float sensorValue,gasdados;
  sensorValue = analogRead(gasdados); // read analog input pin 0
  temperatura = dht11.readTemperature();

  
  if((sensorValue <= 100) || (temperatura > 30)){
    
    digitalWrite(led,HIGH);
    digitalWrite(buzzer , HIGH);
    
    Serial.print(sensorValue);
    Serial.println(" |FUMAÇA DETECTADA");
    
    
  }
  else{
  	digitalWrite(led,LOW);
    digitalWrite(buzzer , LOW);
    Serial.println("Valor: ");
    Serial.println(sensorValue);
  }
  
  Serial.println(sensorValue);
  

  Serial.println(temperatura);  
  delay(1000);
  
}

 float getsensorValue(int pin){
 return (analogRead(pin));
   
}
